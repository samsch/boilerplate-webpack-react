{
  "name": "basic-webpack",
  "version": "1.0.0",
  "description": "Basic Webpack usage",
  "main": "src/main.js",
  "scripts": {
    "start": "webpack-dev-server -d --open --progress --hot --inline",
    "dev": "webpack -d --watch --progress",
    "build": "rm -rf build && NODE_ENV=production webpack -p --progress",
    "test": "jest"
  },
  "keywords": [
    "webpack",
    "javascript",
    "modules"
  ],
  "author": "Samuel Scheiderich",
  "license": "0BSD",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.4.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.0.1",
    "node-sass": "^4.5.3",
    "prettier": "^1.5.3",
    "react": "^16.0.0-rc.2",
    "react-dom": "^16.0.0-rc.2",
    "react-test-renderer": "^16.0.0-rc.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
